{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "skipLibCheck": true,
    "types": ["node"],
    "strict": false,
    "forceConsistentCasingInFileNames": false
  },
  "include": ["src/**/*.ts"]
}
